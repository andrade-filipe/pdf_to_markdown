#!/usr/bin/env python3
"""
PDF to Markdown Converter - Wrapper Script
==========================================

Script wrapper para facilitar o uso da ferramenta de conversão.
Uso: ./pdf2md [comando] [opções]
"""

import sys
import os

# Adicionar o diretório atual ao path
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

# Executar o main.py
if __name__ == "__main__":
    from main import main
    main()
